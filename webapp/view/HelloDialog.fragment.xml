<c:FragmentDefinition
	xmlns="sap.m"
	xmlns:c="sap.ui.core"
>
    <Dialog
        id="helloDialog"
        title="Hello {/recipient/name}"
        >
        <content>
            <c:Icon
                src="sap-icon://hello-world"
                size="7rem"
                class="sapUiMediumMargin"
            >
            </c:Icon>
        </content>
        <beginButton>
            <Button 
                text="X"
                press=".onCloseDialog"
            ></Button>
        </beginButton>
    </Dialog>
</c:FragmentDefinition>